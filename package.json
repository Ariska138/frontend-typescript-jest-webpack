{
  "name": "frontend-typescript-jest",
  "version": "1.0.0",
  "description": "boilerplate for simple frontend application in TypeScript w/ Jest for tests",
  "main": "server/index.ts",
  "scripts": {
    "start": "webpack-dev-server",
    "tsc": "tsc",
    "reload": "reload",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "boilerplate",
    "frontend",
    "typescript",
    "jest"
  ],
  "author": "jjoekoullas",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/backbone": "^1.3.43",
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^23.3.1",
    "@types/webpack": "^4.4.11",
    "@types/webpack-dev-server": "^3.1.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "node-sass": "^4.9.3",
    "reload": "^2.3.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/test/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "app/(.*)": "<rootDir>/src/$1"
    }
  }
}
